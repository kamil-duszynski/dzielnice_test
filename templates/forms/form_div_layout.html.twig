{% block form_row %}
    {% spaceless %}
        {{ form_label(form) }}
        {{ form_widget(form, { 'attr': { 'class': 'form-control'} }) }}
        {{ form_errors(form) }}
    {% endspaceless %}
{% endblock %}

{% block form_errors %}
    {% spaceless %}
        {% if errors|length > 0 %}
            <p class="error">
                {% for error in errors %}
                    {{ error.message }} <br/>
                {% endfor %}
            </p>
        {% endif %}
    {% endspaceless %}
{% endblock %}

{% block date_widget %}
    {% spaceless %}
        <div class="form-group">
            <div class="input-group date">
                <div class="input-group-addon">
                    <i class="fa fa-calendar"></i>
                </div>
                {{ form_widget(form, { 'attr': { 'class': 'form-control datepicker'} }) }}
            </div>
        </div>
    {% endspaceless %}
{% endblock %}